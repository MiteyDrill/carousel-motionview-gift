<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start" >
        <Constraint
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView0"/>
        <Constraint
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView1"/>
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            motion:layout_constraintEnd_toStartOf="@id/imageView3"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView3"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView4"
            motion:layout_constraintStart_toEndOf="@id/imageView3"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            />
        <Constraint
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView5"/>
        <Constraint
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView6"/>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/previous" >
        <Constraint
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView0"/>
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView1"
            motion:layout_constraintEnd_toStartOf="@id/imageView2"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            />
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView3"
            motion:layout_constraintStart_toEndOf="@id/imageView2"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            />
        <Constraint
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView4"/>
        <Constraint
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView5"/>
        <Constraint
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView6"/>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/nex" >
        <Constraint
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView0"
            />
        <Constraint
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView1"
            />
        <Constraint
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView2"
            />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView3"
            motion:layout_constraintEnd_toStartOf="@id/imageView4"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"/>
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView4"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView5"
            motion:layout_constraintEnd_toStartOf="@id/imageView6"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            />
        <Constraint
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView6"/>
    </ConstraintSet>
    <Transition
        android:id="@+id/transition_previous"
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/previous" >
        <OnSwipe
            motion:dragDirection="dragRight"
            motion:touchAnchorSide="right" />
    </Transition>
    <Transition
        android:id="@+id/transition_next"
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/nex" >
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="left" />
    </Transition>
</MotionScene>